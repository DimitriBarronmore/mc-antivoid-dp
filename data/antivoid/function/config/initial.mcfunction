# Set timer duration to three minecraft days, or one hour.
scoreboard players set timer_duration ANTIVOID_VAR 3600

# Kill players by default. (bool)
scoreboard players set kill_lingering ANTIVOID_VAR 1

# Enable the bossbar display. 0: No | 1: Yes
scoreboard players set enable_bossbar ANTIVOID_VAR 1
# Enable the sidebar display. 0: No | 1: Yes
scoreboard players set enable_sidebar ANTIVOID_VAR 0
